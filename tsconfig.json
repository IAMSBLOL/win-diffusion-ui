{

  "compilerOptions": {
    "incremental": true,
    "target": "es2021",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2021",
      "dom.iterable",
      "esnext"
    ],
    "jsx": "react-jsxdev",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "paths": {
      "*": [
        "node_modules/*"
      ],
      "@src/*": [
        "./src/*"
      ],
      "@renderer/*": [
        "./src/renderer/*"
      ],
      "@router/*": [
        "./src/renderer/router/*"
      ],
      "@router": [
        "./src/renderer/router"
      ],
      "@api": [
        "./src/renderer/net"
      ],
    }
  },

  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll",
    ".eslintrc.js"
  ]
}